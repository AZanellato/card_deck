{{#*inline "page"}}
{{#if error_message}}
  <h1>{{error_message}}</h1>
{{else}}
<section class="hero is-info welcome is-small">
  <div class="hero-body">
      <div class="container">
        <h1 class="title">
          {{ title }}
        </h1>
      </div>
  </div>
</section>
<section class="info-tiles">
  <div class="tile is-ancestor has-text-centered">
      <div class="tile is-parent">
          <article class="tile is-child box">
              <p class="title"> 15 </p>
              <p class="subtitle">Lead time</p>
          </article>
      </div>
      <div class="tile is-parent">
        <article class="tile is-child box">
          <p class="title"> {{ cards_count }} </p>
          <p class="subtitle">Number of cards</p>
        </article>
      </div>
      <div class="tile is-parent">
        <article class="tile is-child box">
            <p class="title"> 7 </p>
            <p class="subtitle">Throughput 2 weeks</p>
        </article>
      </div>
  </div>
</section>
<div class="hero-body">
  <div class="container">
    <div class="card is-primary">
      <header class="card-header">
        <p class="card-header-title">
          Cards
        </p>
      </header>
      <div class="card-table">
        {{#each cards}}
            <a class="panel-block is-active">
              <span class="panel-icon">
                <i class="fas fa-book" aria-hidden="true"></i>
              </span>
              {{ this.title }}
            </a>
        {{/each}}
      </div>
      <footer class="panel-footer" style="justify-content: flex-end !important">
        <a href="#" class="card-footer-item">
          View All
        </a>
        <form method="post">
          <div class="field has-addons is-pulled-right">
            <div class="control is-expanded">
              <input name="card_id" class="input" type="text" placeholder="Card id">
            </div>
            <div class="control">
              <button class="button is-info">
                Add card by id
              </button>
            </div>
          </div>
        </form>
      </footer>
    </div>
  </div>
</div>

{{/if}}
{{/inline}}
{{~> (parent)~}}
